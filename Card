package blackjack;

public class Card {
    boolean soft;
    String name;
    int value;
    String suit;
    String face;
    public Card(int n,String f, String s){
        value = n;
        suit = s;
        face = f;
        name = face + "of" + suit;
        if(value == 11){
            soft = true;
        } else {
            soft = false;
        }
    }
    public String getName(){
        return name;
    }
    public String getFace(){
        return face;
    }
    public String getSuit(){
        return suit;
    }
    public int getValue(){
        return value;
    }
}
